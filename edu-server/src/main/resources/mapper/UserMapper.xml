<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.edu.platform.mapper.UserMapper">

    <!-- 动态更新用户信息（只更新非null字段） -->
    <update id="update" parameterType="com.edu.platform.entity.User">
        update edu_user
        <set>
            <if test="nickname != null">nickname = #{nickname},</if>
            <if test="avatar != null">avatar = #{avatar},</if>
            <if test="email != null">email = #{email},</if>
            <if test="phone != null">phone = #{phone},</if> <!-- 预留手机号修改 -->
            <if test="status != null">status = #{status},</if>
            update_time = #{updateTime}
        </set>
        where id = #{id}
    </update>

    <!-- 分页查询用户（新增配置） -->
    <select id="pageQuery" parameterType="com.edu.platform.dto.UserPageQueryDTO" resultType="com.edu.platform.entity.User">
        select * from edu_user
        <where>
            <!-- 用户名模糊查询 -->
            <if test="username != null and username != ''">
                and username like concat('%', #{username}, '%')
            </if>
            <!-- 角色筛选 -->
            <if test="role != null">
                and role = #{role}
            </if>
            <!-- 状态筛选 -->
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
        <!-- 排序：按更新时间倒序（最新的在前面） -->
        order by update_time desc
    </select>
</mapper>